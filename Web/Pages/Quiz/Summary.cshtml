@page "{quizId}"
@model BackendLab01.Pages.Summary
@{
    ViewData["Title"] = "Quiz Results";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Quiz Results: @Model.QuizTitle</h2>

<p>You answered @Model.CorrectAnswers out of @Model.TotalQuestions questions correctly!</p>

<div>
    <a asp-page="/Index" class="btn btn-primary">Back to Home</a>
    <a asp-page="/Quiz/Item" asp-route-quizId="@Model.QuizId" asp-route-itemId="1" class="btn btn-secondary">Try Again</a>
</div>